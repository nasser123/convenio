    public void filtrar(Convenio c) {
        this.c = c;

        clienteQuery = convenioPUEntityManager.createNamedQuery("Cliente.findByIdconvenio");
        clienteQuery.setParameter("idconvenio", this.c);

        java.util.Collection data = clienteQuery.getResultList();

        clienteList.clear();
        clienteList.addAll(data);


    }

